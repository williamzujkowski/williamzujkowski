{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terminal Animation Configuration",
  "type": "object",
  "required": ["config", "sequences"],
  "properties": {
    "config": {
      "type": "object",
      "description": "Terminal window and display configuration",
      "properties": {
        "window": {
          "type": "object",
          "properties": {
            "width": {"type": "integer", "default": 800},
            "height": {"type": "integer", "default": 600},
            "title": {"type": "string", "default": "Terminal"},
            "theme": {"type": "string", "enum": ["dark", "light", "retro"], "default": "dark"}
          }
        },
        "terminal": {
          "type": "object",
          "properties": {
            "fontSize": {"type": "integer", "default": 14},
            "fontFamily": {"type": "string", "default": "monospace"},
            "lineHeight": {"type": "number", "default": 1.5},
            "padding": {"type": "integer", "default": 20},
            "cursorStyle": {"type": "string", "enum": ["block", "line", "underline"], "default": "block"},
            "prompt": {"type": "string", "default": "$ "}
          }
        },
        "animation": {
          "type": "object",
          "properties": {
            "typingSpeed": {
              "type": "object",
              "properties": {
                "min": {"type": "integer", "default": 30},
                "max": {"type": "integer", "default": 120},
                "avg": {"type": "integer", "default": 60}
              }
            },
            "scrollSpeed": {"type": "integer", "default": 300},
            "pauseBetweenSequences": {"type": "integer", "default": 500}
          }
        },
        "colors": {
          "type": "object",
          "properties": {
            "background": {"type": "string", "default": "#000000"},
            "text": {"type": "string", "default": "#00ff00"},
            "prompt": {"type": "string", "default": "#00ff00"},
            "cursor": {"type": "string", "default": "#00ff00"},
            "selection": {"type": "string", "default": "#ffffff33"}
          }
        }
      }
    },
    "sequences": {
      "type": "array",
      "description": "Array of animation sequences",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["command", "output", "text", "clear", "pause", "ascii", "progress"]
          },
          "content": {"type": "string"},
          "prompt": {"type": "string"},
          "color": {"type": "string"},
          "duration": {"type": "integer"},
          "delay": {"type": "integer"},
          "typing": {"type": "boolean", "default": true},
          "instant": {"type": "boolean", "default": false},
          "style": {
            "type": "object",
            "properties": {
              "bold": {"type": "boolean"},
              "italic": {"type": "boolean"},
              "underline": {"type": "boolean"},
              "glow": {"type": "boolean"}
            }
          }
        }
      }
    }
  }
}